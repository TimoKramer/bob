{
  "host": "localhost",
  "port": 7777,
  "protocol": "http",
  "tests": [
    {
      "name": "Status check",
      "path": "/api/can-we-build-it",
      "method": "GET",
      "response": {
        "message": "Yes we can! ðŸ”¨ ðŸ”¨"
      }
    },
    {
      "name": "External resource registration",
      "path": "/api/external-resource/git",
      "method": "POST",
      "data": {
        "url": "http://localhost:8000"
      },
      "response": {
        "message": "Ok"
      }
    },
    {
      "name": "Pipeline creation",
      "path": "/api/pipeline/dev/test",
      "method": "POST",
      "data": {
        "image": "busybox:musl",
        "vars": {
          "env": "test",
          "url": "test.com"
        },
        "steps": [
          "echo hello",
          "sleep 10",
          "sh -c 'touch test.txt && echo $env >> test.txt'",
          "cat test.txt",
          "ls /resources"
        ],
        "artifacts": {
          "test-jar": "/tmp/test.jar"
        },
        "resources": [
          {
            "name": "my-source",
            "type": "external",
            "provider": "git",
            "params": {
              "repo": "https://github.com/bob-cd/bob",
              "branch": "master"
            }
          },
          {
            "name": "another-source",
            "type": "external",
            "provider": "git",
            "params": {
              "repo": "https://github.com/lispyclouds/clj-docker-client",
              "branch": "master"
            }
          }
        ]
      },
      "response": {
        "message": "Ok"
      }
    },
    {
      "name": "Pipeline start",
      "path": "/api/pipeline/start/dev/test",
      "method": "POST",
      "data": {},
      "response": {
        "message": "Ok"
      }
    },
    {
      "name": "Find running pipeline names",
      "path": "/api/pipeline/status/running",
      "method": "GET",
      "wait": 10,
      "data": {},
      "response": {
        "message": [
          {
            "group": "dev",
            "name": "test"
          }
        ]
      }
    },
    {
      "name": "Pipeline logs",
      "path": "/api/pipeline/logs/dev/test/1/0/50",
      "method": "GET",
      "wait": 40,
      "response": {
        "message": [
          "hello",
          "test",
          "another-source",
          "my-source"
        ]
      }
    },
    {
      "name": "Pipeline status",
      "path": "/api/pipeline/status/dev/test/1",
      "method": "GET",
      "response": {
        "message": "passed"
      }
    },
    {
      "name": "Pipeline deletion",
      "path": "/api/pipeline/dev/test",
      "method": "DELETE",
      "response": {
        "message": "Ok"
      }
    },
    {
      "name": "External resource listing",
      "path": "/api/external-resources",
      "method": "GET",
      "response": {
        "message": [
          "git"
        ]
      }
    },
    {
      "name": "External resource deletion",
      "path": "/api/external-resource/git",
      "method": "DELETE",
      "data": {},
      "response": {
        "message": "Ok"
      }
    },
    {
      "name": "Blank listing",
      "path": "/api/external-resources",
      "method": "GET",
      "response": {
        "message": []
      }
    },
    {
      "name": "Bob GC",
      "path": "/api/gc",
      "method": "POST",
      "data": {},
      "response": {
        "message": "Ok"
      }
    },
    {
      "name": "Bob Full GC",
      "path": "/api/gc/all",
      "method": "POST",
      "data": {},
      "response": {
        "message": "Ok"
      }
    }
  ]
}
